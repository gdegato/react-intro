.pagination-container {
    display: flex;
    justify-content: center;
    align-items: center;
}

.pagination-item {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: #E1E1E1;
    font-size: 18px;
    font-weight: 700;
    letter-spacing: -0.015em;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 10px;
}

.pagination-item.active {
    background: #407BFF;
}

.arrow-previous {
    transform: rotate(-180deg);
}

.arrow-inactive {
    color: #E1E1E1
}

.arrow-next {
    margin-left: 10px;
}

.arrow-active {
    color: #407BFF;
}